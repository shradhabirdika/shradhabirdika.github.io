    <script>
        // Function to toggle zoom for images
        const zoomableSlides = document.querySelectorAll('.zoomable-slide');
        let zoomedIn = false;
    
        zoomableSlides.forEach(slide => {
            slide.addEventListener('click', function () {
                if (!zoomedIn) {
                    this.style.position = 'fixed';
                    this.style.top = '50%';
                    this.style.left = '50%';
                    this.style.transform = 'translate(-50%, -50%)';
                    this.style.width = '80%';
                    this.style.height = 'auto';
                    this.style.zIndex = '1000';
                    this.style.boxShadow = '0px 4px 6px rgba(0, 0, 0, 0.3)';
                    zoomedIn = true;
                } else {
                    resetZoom(this);
                }
            });
        });
    
        document.addEventListener('click', function (event) {
            if (zoomedIn && !event.target.classList.contains('zoomable-slide')) {
                zoomableSlides.forEach(resetZoom);
                zoomedIn = false;
            }
        });
    
        function resetZoom(image) {
            image.style.position = '';
            image.style.top = '';
            image.style.left = '';
            image.style.transform = '';
            image.style.width = '45%';
            image.style.height = '';
            image.style.zIndex = '';
            image.style.boxShadow = '';
        }
    </script>

    <!-- Back to Top Button -->
